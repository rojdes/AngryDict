<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="200dp"
    android:layout_height="200dp" android:background="@drawable/bg_widget_clock"
    tools:ignore="HardcodedText,RtlHardcoded,ContentDescription">

    <LinearLayout android:id="@+id/ll_hours" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/widget_tv_hour_margin" android:orientation="vertical">

        <TextView android:id="@+id/tv_hour8_off" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/widget_tv_hour_margin"
            android:drawableLeft="@drawable/ic_off" android:text="8" />

        <TextView android:id="@+id/tv_hour8_on" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/widget_tv_hour_margin"
            android:drawableLeft="@drawable/ic_on" android:text="8" android:visibility="gone" />

        <TextView android:id="@+id/tv_hour4_off" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/widget_tv_hour_margin"
            android:drawableLeft="@drawable/ic_off" android:text="4" />

        <TextView android:id="@+id/tv_hour4_on" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/widget_tv_hour_margin"
            android:drawableLeft="@drawable/ic_on" android:text="4" android:visibility="gone" />

        <TextView android:id="@+id/tv_hour2_off" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/widget_tv_hour_margin"
            android:drawableLeft="@drawable/ic_off" android:text="2" />

        <TextView android:id="@+id/tv_hour2_on" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/widget_tv_hour_margin"
            android:drawableLeft="@drawable/ic_on" android:text="2" android:visibility="gone" />

        <TextView android:id="@+id/tv_hour1_off" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_off" android:text="1" />

        <TextView android:id="@+id/tv_hour1_on" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_on" android:text="1" android:visibility="gone" />
    </LinearLayout>

    <ImageView android:id="@+id/imageView2" android:layout_width="48dp" android:layout_height="34dp"
        android:layout_below="@+id/ll_hours" android:layout_marginLeft="15dp"
        android:layout_marginTop="-40dp" android:layout_toRightOf="@+id/ll_hours"
        android:src="@drawable/ic_hint_minutes" />

    <!-- minute -->

    <LinearLayout android:id="@+id/linearLayout1" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_below="@+id/ll_hours"
        android:layout_marginBottom="5dp" android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp" android:layout_marginTop="5dp" android:orientation="horizontal"
        android:weightSum="6">

        <TextView android:id="@+id/tv_minute32_on" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center" android:layout_weight="1"
            android:drawableTop="@drawable/ic_on" android:text="32" android:visibility="gone" />

        <TextView android:id="@+id/tv_minute32_off" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center" android:layout_weight="1"
            android:drawableTop="@drawable/ic_off" android:text="32" android:visibility="visible" />


        <TextView android:id="@+id/tv_minute16_on" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center" android:layout_weight="1"
            android:drawableTop="@drawable/ic_on" android:text="16" android:visibility="gone" />

        <TextView android:id="@+id/tv_minute16_off" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center" android:layout_weight="1"
            android:drawableTop="@drawable/ic_off" android:text="16" android:visibility="visible" />

        <TextView android:id="@+id/tv_minute8_on" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center" android:layout_weight="1"
            android:drawableTop="@drawable/ic_on" android:text="8" android:visibility="gone" />

        <TextView android:id="@+id/tv_minute8_off" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center" android:layout_weight="1"
            android:drawableTop="@drawable/ic_off" android:text="8" android:visibility="visible" />

        <TextView android:id="@+id/tv_minute4_on" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center" android:layout_weight="1"
            android:drawableTop="@drawable/ic_on" android:text="4" android:visibility="gone" />

        <TextView android:id="@+id/tv_minute4_off" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center" android:layout_weight="1"
            android:drawableTop="@drawable/ic_off" android:text="4" android:visibility="visible" />

        <TextView android:id="@+id/tv_minute2_on" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center" android:layout_weight="1"
            android:drawableTop="@drawable/ic_on" android:text="2" android:visibility="gone" />

        <TextView android:id="@+id/tv_minute2_off" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center" android:layout_weight="1"
            android:drawableTop="@drawable/ic_off" android:text="2" android:visibility="visible" />

        <TextView android:id="@+id/tv_minute1_on" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center" android:layout_weight="1"
            android:drawableTop="@drawable/ic_on" android:text="1" android:visibility="gone" />

        <TextView android:id="@+id/tv_minute1_off" style="@style/TextView.Time"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:layout_gravity="center" android:layout_weight="1"
            android:drawableTop="@drawable/ic_off" android:text="1" android:visibility="visible" />
    </LinearLayout>

    <ImageView android:id="@+id/imageView1" android:layout_width="45dp" android:layout_height="30dp"
        android:layout_alignLeft="@+id/imageView2" android:layout_alignTop="@+id/ll_hours"
        android:layout_marginTop="28dp" android:scaleType="fitXY"
        android:src="@drawable/ic_hint_hour" />

    <ImageView android:id="@+id/iv_pm" android:layout_width="75dp"
        android:layout_height="75dp" android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" android:layout_margin="@dimen/widget_iv_timeperiod_margin"

        android:src="@drawable/ic_pm" />

    <ImageView android:id="@+id/iv_am" android:layout_width="75dp"
        android:layout_height="75dp" android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" android:layout_margin="@dimen/widget_iv_timeperiod_margin"
        android:src="@drawable/ic_am" android:visibility="gone" />

    <ImageView android:id="@+id/iv_prefs" android:layout_width="30dp" android:layout_height="30dp"
        android:layout_alignBottom="@+id/imageView2" android:layout_alignRight="@+id/linearLayout1"
        android:layout_marginBottom="5dp" android:src="@drawable/ic_prefs" />


</RelativeLayout>